<%= f = form_for @changeset, "#", [phx_change: :validate] %>
  <%= text_input f, :player_name, placeholder: "Insert player name" %>
</form>

<section id="runningGames">
  <%= if @valid do %>
    <h3>Running games</h3>
    <%= if Enum.empty?(@open_games) do %>
    <h3>No games running - why don't you start one?</h3>
    <% else %> 
      <%= for open_game <- @open_games do %>
        <a href="<%= Routes.session_path(SspWeb.Endpoint, :join, @changeset.changes.player_id, @changeset.changes.name, open_game.session_id) %>">Join <%= open_game.player1_name %>'s game</a>
      <% end %>
    <% end %>
  <% end %>
</section>

<section id="startNewGame">
  <%= if @valid do %>
    <a href="<%= Routes.session_path(SspWeb.Endpoint, :new, @changeset.changes.player_id, @changeset.changes.name) %>">Start a new game</a>
  <% end %>
</section>
